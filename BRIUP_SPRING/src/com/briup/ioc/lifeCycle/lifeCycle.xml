<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- 默认情况下，读取完配置文件，就会调用init()方法，并生成单例模式的对象 调用container的destroy()方法会销毁对象 -->
	<!-- 如果是非单例模式，则在使用对象是才会初始化并调用init()方法，销毁容器的时候不会执行destroy() -->
	<bean name="teacher" class="com.briup.bean.Teacher" init-method="init"
		destroy-method="destroy">
		<property name="student" ref="student"></property>
	</bean>

	<bean name="student" class="com.briup.bean.Student">
		<property name="address" ref="address"></property>
	</bean>

	<bean name="address" class="com.briup.bean.Address">
	</bean>

</beans>